#!/usr/bin/env python3
import os
import sys

# Trouver le chemin vers le répertoire principal du projet
project_dir = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))

# Ajouter le répertoire du projet au chemin de recherche Python
sys.path.insert(0, project_dir)

# Importer et exécuter la fonction main depuis cli.py
try:
    # Si vous avez importé cli.py comme un module
    from cli import main
    sys.exit(main())
except ImportError:
    # Sinon, exécuter directement cli.py
    import subprocess
    cli_path = os.path.join(project_dir, 'cli.py')
    sys.exit(subprocess.call([sys.executable, cli_path] + sys.argv[1:]))